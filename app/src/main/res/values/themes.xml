<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UpTodo" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.UpTodo.SplashScreen" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@color/black</item>

        <!-- Set the splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon</item>

        <item name="windowSplashScreenAnimationDuration">1000000</item>

        <!-- Post splash screen theme -->
        <item name="postSplashScreenTheme">@style/Theme.UpTodo</item>
    </style>

</resources>